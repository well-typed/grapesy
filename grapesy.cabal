    , containers         >= 0.6  && < 0.7
    , contra-tracer      >= 0.2  && < 0.3
    , exceptions         >= 0.10 && < 0.11
    , mtl                >= 2.2  && < 2.4
    , pretty-show        >= 1.10 && < 1.11
    , proto-lens-runtime >= 0.7  && < 0.8
    , QuickCheck         >= 2.14 && < 2.15
